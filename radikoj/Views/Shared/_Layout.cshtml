@inject SharedViewLocalizer Localizer

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@(ViewData["Title"]?.ToString() + " - " ?? "") @Localizer["Antro Radikoj"]</title>
	<link rel="stylesheet" href="~/css/styleb.css" />
	<link rel="stylesheet" href="~/css/style.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css">
</head>
<body>
	<nav class="navbar is-info">
		<div class="navbar-brand">
			<span class="navbar-item has-text-weight-bold">
				@Localizer["Antro Radikoj"]
			</span>
		</div>
		<div class="navbar-menu">
			<div class="navbar-start">
				<a class="navbar-item" href="@Url.Action("Index", "Home")">
					@Localizer["Home"]
				</a>
				<a class="navbar-item" href="@Url.Action("Index", "Articles")">
					@Localizer["More"]
				</a>
				<a class="navbar-item" href="@Url.Action("List", "Participate")">
					@Localizer["Participate"]
				</a>
				<a class="navbar-item" href="@Url.Action("Map", "Participate")">
					@Localizer["World"]
				</a>
			</div>
			<div class="navbar-end">
				@await Html.PartialAsync("_CultureNavPartial")
				<div class="navbar-item has-dropdown is-hoverable">
					<span class="navbar-link">
						<span class="icon"><i class="bi bi-gear-wide-connected"></i></span>
					</span>
					<div class="navbar-dropdown is-right">
						@if (!User?.Identity?.IsAuthenticated ?? true)
						{
							<a class="navbar-item" href="@Url.Action("SignIn", "Account")">@Localizer["Sign In"]</a>
						}
						else
						{
							<span class="navbar-item has-text-weight-bold">@Localizer["Signed in as"] @User.Identity.Name</span>
							<a class="navbar-item" href="@Url.Action("Index", "Dashboard")">@Localizer["Dashboard"]</a>
							<a class="navbar-item" href="@Url.Action("Translations", "Dashboard")">@Localizer["Translations"]</a>
							<a class="navbar-item" href="@Url.Action("ListAll", "Account")">@Localizer["Manage Access"]</a>
							<hr class="navbar-divider">
							<a class="navbar-item" href="@Url.Action("SignOut", "Account")">@Localizer["Sign Out"]</a>
						}

					</div>
				</div>
			</div>
		</div>
	</nav>
	<main>
		@RenderBody()
	</main>
</body>
</html>